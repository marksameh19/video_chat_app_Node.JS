    <div class="container">
      <div class="row row-content allign-items-center">
        <div class="col-12 col-sm-8 offset-sm-2">
          <div class="card" id="id4">
            <h5 class="card-header"><b>Sign Up</b></h5>
            <div class="card-body">
              <form method="POST" action="/sign_up">
                <div class="form-group row">
                  <label for="firstname">First Name</label>
                  <input
                    id="firstname"
                    class="form-control"
                    type="text"
                    name="firstName"
                  />
                </div>
                <div class="form-group row">
                  <label for="lastname">Last Name</label>
                  <input
                    id="lastname"
                    class="form-control"
                    type="text"
                    name="lastName"
                  />
                </div>
                <div class="form-group row">
                  <label for="email">E-mail</label>
                  <input
                    id="email1"
                    class="form-control"
                    type="text"
                    name="username"
                  />
                </div>
                <div class="form-group row">
                  <label for="password">password</label>
                  <input
                    type="password"
                    class="form-control"
                    id="password1"
                    name="password"
                  />
                </div>
                <div class="form-group row">
                  <label for="password2">Retype password</label>
                  <input
                    type="password"
                    class="form-control"
                    id="password2"
                    name="passwordRe"
                  />
                </div>

                <div class="form-row">
                  <button type="submit" class="btn btn-primary">Sign Up</button>
                </div>
              </form>
              <h5>or signup with</h5>
              <div>
                <a class="fb btn" href=""
                  ><i class="fa fa-facebook fa-fw fa-lg"></i>sign up with
                  facebook</a
                >
                <a class="btn google" href=""
                  ><i class="fa fa-google fa-fw fa-lg"></i>sign up with google
                  +</a
                >
                <a class="btn twitter" href=""
                  ><i class="fa fa-twitter fa-fw fa-lg"></i>sign up with
                  twitter</a
                >
                <h5>Already a user ?</h5>
                <button
                  onclick="asd(2)"
                  id="id3"
                  type="button"
                  class="btn btn-primary"
                >
                  Log in
                </button>
              </div>
            </div>
          </div>
          <div class="card" id="id2">
            <h5 class="card-header"><b>Log In</b></h5>
            <div class="card-body">
              <form method="POST" action="/login">
                <div class="form-group row">
                  <label for="email">E-mail</label>
                  <input
                    id="email"
                    class="form-control"
                    type="text"
                    placeholder="Type your email here"
                    name="username"
                  />
                </div>
                <div class="form-group row">
                  <label for="password">password</label>
                  <input
                    type="password"
                    class="form-control"
                    id="password"
                    placeholder="Type your password here"
                    name="password"
                  />
                </div>

                <div class="form-row">
                  <button type="submit" class="btn btn-primary">Log In</button>
                </div>
                <div class="form-group row">
                  <div class="form-check">
                    <input class="form-check-input" type="checkbox" />
                    <label class="form-check-label"> Remember me </label>
                  </div>
                </div>
              </form>
              <h5>or login with</h5>
              <div>
                <a class="fb btn" href=""
                  ><i class="fa fa-facebook fa-fw fa-lg"></i>login with
                  facebook</a
                >
                <a class="btn google" href=""
                  ><i class="fa fa-google fa-fw fa-lg"></i>login with google
                  +</a
                >
                <a class="btn twitter" href=""
                  ><i class="fa fa-twitter fa-fw fa-lg"></i>login with
                  twitter</a
                >
                <a href="/forgot">forgot your password?</a>
                <h5>not a user ?</h5>
                <button
                  onclick="asd(1)"
                  type="button"
                  id="id1"
                  class="btn btn-primary"
                >
                  Sign up
                </button>
              </div>
            </div>
          </div>
        </div>
      </div>
